<div class="container">
  <h1>Deaf Grandma</h1>
    <p>Grandma says: "<span id="grandma_says"><%= grandma_evaluator %></span>"</p>


  <!-- this form sends data (the <input> elements) to the
       URL '/grandma' using the HTTP verb 'post', which
       matches the 'post /grandma' route defined in
       app/controller/index.rb -->
  <form action="/grandma" method="post">
    Say something to Grandma:
    <br>
    <input type="text" name="grandma">
    <input type="submit" value="Say it!">
  </form>
</div>
